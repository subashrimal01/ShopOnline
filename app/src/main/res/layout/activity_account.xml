<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/home_pic"
        />

    <TextView
        android:id="@+id/LoggedIn_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="You are logged in as:"

        android:textColor="#000"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/img"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/userPhNum_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/LoggedIn_tv"/>

    <Button
        android:id="@+id/signout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logout"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/userPhNum_tv"
        android:background="@drawable/btn_bg"
        android:textColor="#fff"/>

</android.support.constraint.ConstraintLayout>