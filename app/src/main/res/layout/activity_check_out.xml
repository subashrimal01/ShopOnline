<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOutActivity">

    <include
        android:id="@+id/checkout_activity_toolbar"
        layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/recipt_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkout_activity_toolbar"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/gradient"
        android:padding="10dp">


        <TextView
            android:id="@+id/chkout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/comfortaa"
            android:text="Name"
            android:textColor="#fff"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/chkout_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/comfortaa"
            android:text="Phone"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/chkout_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chkout_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/comfortaa"
            android:text="address"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/chkout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chkout_address"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/comfortaa"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/chkout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chkout_address"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/comfortaa"
            android:text="Date"
            android:layout_alignParentEnd="true"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/confirm_order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:paddingStart="20dp"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/checkout_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/comfortaa"
            android:text="Total:"
            android:textColor="#363636"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/checkout_total_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/checkout_total_text"
            android:fontFamily="@font/comfortaa"
            android:text="Rs. 0"
            android:textColor="#ff4647"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/confirm_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gradient"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="Confirm order"
            android:textColor="#fff"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>