<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/start"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_account_circle_white_48dp" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_img"
        android:layout_alignBaseline="@id/user_img"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="User Name"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/user_ph_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_type_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/nav_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/user_img"
        android:layout_centerHorizontal="true"
        android:background="@drawable/nav_lgn_btn_bg"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="login"
        android:textColor="#4E4E4E"
        android:textSize="12sp" />
</RelativeLayout>